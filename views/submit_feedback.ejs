<body>
    <h1>U.I.E.T. STUDENT'S FEEDBACK PORTEL</h1>
    <div class="contain">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active px-2">
              <a class="nav-link adi" href="dashboard">Home</a>
            </li>
            <li class="nav-item active px-2">
              <a class="nav-link adi" href="view_all_feedback">View All Feedbacks</a>
            </li>
            <li class="nav-item active px-2">
              <a class="nav-link adi" href="submit_feedback">Submit A Feedback</a>
            </li>
            
            <li class="nav-item active px-2">
                <a class="nav-link adi" href="view_feedback">View Own Feedback</a>
              </li>
              <li class="nav-item active px-2">
                <a class="nav-link adi" href="view_query">View Own Query</a>
              </li>
          </ul>
          <ul class="navbar-nav ml-auto">
            
            <li class="nav-item active px-2">
              <a class="nav-link adi" href="user_profile">Profile</a>
            </li>
            <li class="nav-item active px-2">
              <a class="nav-link adi" href="auth/logout">Logout</a>
            </li>
          </ul>
        </div>
        
      
      </nav>
    </div>
    <div class="contain mb-2">
        <div class="navbar mt-4 navbar-dark bg-light justify-content-center border border-success" id="textarea">

            <h4 class="card-title font-weight-bold ">
                <h2 class="text-success ">Submit A Feedback</h2>
            </h4>
        </div>
    </div>

    <div class="container">
        <div class="card mx-auto mt-4 shadow rounded" >
            <div class="card-body">
               
                <%- include ("./messages") %>
                <form action="/auth/submit_feedback" method="POST" id="feedback">
                    <div class="col-md-12" hidden>
                        <div class="form-group">
                            <input type="email" value="<%= email %>" class="form-control" name="email1" id="textarea" rows="3">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="textarea">Feedback:</label>
                            <textarea type="text" class="form-control" name="feedback" id="textarea" rows="3"
                                placeholder="" required minlength="3"></textarea>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <button id="submit" class="btn btn-success w-100 ">Post Feedback</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>
    <div class="row mt-3 mx-0 px-0">
        <div class="col-md-12 py-2px text-center bg-dark">
            <p class="font-italic text-light ">&copy; Copyrights uietfeedbackportel.com All rights reserved.
            </p>
        </div>
    </div>

    
